import java.time.LocalDate;
import java.time.OffsetDateTime;

CREATE TABLE baby (
    id INTEGER AS Long PRIMARY KEY,
    name TEXT NOT NULL,
    parents TEXT NOT NULL,
    born_at TEXT AS OffsetDateTime,
    due_on TEXT AS LocalDate
);

selectAll:
SELECT * FROM baby;

byId:
SELECT * FROM baby WHERE id = :id;

clear:
DELETE FROM baby;

