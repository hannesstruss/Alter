<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  android:id="@+id/guide_left_margin"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <TextView
    android:id="@+id/txt_name"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:textAlignment="center"
    android:layout_marginTop="16dp"
    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
    app:layout_constraintEnd_toStartOf="@+id/guide_end_gutter"
    app:layout_constraintStart_toStartOf="@+id/guide_start_gutter"
    app:layout_constraintTop_toBottomOf="@+id/avatar"
    tools:text="Lars Wurst"/>

  <TextView
    android:id="@+id/txt_parents"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp"
    app:layout_constraintEnd_toStartOf="@+id/guide_center"
    app:layout_constraintStart_toStartOf="@+id/guide_start_gutter"
    app:layout_constraintTop_toBottomOf="@+id/overline_parents"
    tools:text="Tatiana &amp; Hannes"/>

  <TextView
    android:id="@+id/txt_dob"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
    android:layout_marginTop="4dp"
    app:layout_constraintEnd_toStartOf="@+id/guide_end_gutter"
    app:layout_constraintStart_toStartOf="@+id/guide_start_gutter"
    app:layout_constraintTop_toBottomOf="@+id/txt_name"
    tools:text="May 8 2019"/>
  <TextView
    android:id="@+id/avatar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp"
    android:text="ðŸ˜‡"
    android:textSize="60sp"
    app:layout_constraintEnd_toStartOf="@+id/guide_end_gutter"
    app:layout_constraintStart_toStartOf="@+id/guide_start_gutter"
    app:layout_constraintTop_toTopOf="parent"
    tools:ignore="HardcodedText"/>
  <TextView
    android:id="@+id/txt_age"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp"
    app:layout_constraintEnd_toStartOf="@+id/guide_center"
    app:layout_constraintStart_toStartOf="@+id/guide_start_gutter"
    app:layout_constraintTop_toBottomOf="@+id/overline_age"
    tools:text="8 days 5 months"/>
  <TextView
    android:id="@+id/overline_age"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp"
    android:text="Age"
    android:textAppearance="@style/TextAppearance.MaterialComponents.Overline"
    app:layout_constraintEnd_toStartOf="@+id/guide_center"
    app:layout_constraintStart_toStartOf="@+id/guide_start_gutter"
    app:layout_constraintTop_toBottomOf="@+id/txt_dob"/>
  <TextView
    android:id="@+id/overline_parents"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp"
    android:text="Parents"
    android:textAppearance="@style/TextAppearance.MaterialComponents.Overline"
    app:layout_constraintEnd_toStartOf="@+id/guide_center"
    app:layout_constraintStart_toStartOf="@+id/guide_start_gutter"
    app:layout_constraintTop_toBottomOf="@+id/txt_age"/>
  <TextView
    android:id="@+id/overline_due_date"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:text="Due"
    android:textAppearance="@style/TextAppearance.MaterialComponents.Overline"
    app:layout_constraintEnd_toStartOf="@+id/guide_end_gutter"
    app:layout_constraintStart_toStartOf="@+id/guide_center"
    app:layout_constraintTop_toBottomOf="@+id/txt_age"/>
  <TextView
    android:id="@+id/txt_due_date"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    app:layout_constraintEnd_toStartOf="@+id/guide_end_gutter"
    app:layout_constraintStart_toStartOf="@+id/guide_center"
    app:layout_constraintTop_toBottomOf="@+id/overline_due_date"
    tools:text="May 1st 2019"/>
  <androidx.constraintlayout.widget.Guideline
    android:id="@+id/guide_start_gutter"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintGuide_begin="16dp"
    app:layout_constraintStart_toStartOf="parent"/>
  <androidx.constraintlayout.widget.Guideline
    android:id="@+id/guide_end_gutter"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintGuide_end="16dp"

  />
  <androidx.constraintlayout.widget.Guideline
    android:id="@+id/guide_center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintGuide_percent="0.5"

  />

</androidx.constraintlayout.widget.ConstraintLayout>
